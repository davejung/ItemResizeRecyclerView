<?xml version="1.0" encoding="utf-8"?>
<com.example.jaehoonjung.practice_interaction.Activity.FadingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp">


    <ImageView android:id="@+id/itemImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image1"/>

    <View android:id="@+id/coverView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000"/>

    <TextView android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:text="흔하지 않은 무난함에\n대하여"
        android:textColor="#ffffff"
        android:textSize="30dp"/>

</com.example.jaehoonjung.practice_interaction.Activity.FadingRelativeLayout>